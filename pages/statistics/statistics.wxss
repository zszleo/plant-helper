/* pages/statistics/statistics.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 165rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 区块样式 */
.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.toggle-text {
  font-size: 22rpx;
  color: #4CAF50;
  font-weight: 500;
  padding: 6rpx 12rpx;
  border: 1rpx solid #4CAF50;
  border-radius: 16rpx;
  background-color: rgba(76, 175, 80, 0.1);
}

/* 记录类型分布 */
.type-distribution {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.type-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.type-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.type-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.type-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.type-count {
  font-size: 24rpx;
  color: #999;
}

.type-count-text {
  font-size: 20rpx;
  color: #999;
}

.type-percent {
  font-size: 32rpx;
  font-weight: 600;
}

/* 每日趋势 */
.daily-trend {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.trend-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.trend-date {
  width: 120rpx;
  font-size: 24rpx;
  color: #666;
}

.trend-bar {
  flex: 1;
  height: 24rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.trend-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  border-radius: 12rpx;
  transition: width 0.3s;
}

.trend-count {
  width: 60rpx;
  text-align: right;
  font-size: 24rpx;
  color: #666;
}

/* 植物状态统计 */
.plant-status-summary {
  display: flex;
  justify-content: center;
  padding: 27rpx 0;
  margin-bottom: 18rpx;
}

.summary-item {
  text-align: center;
  padding: 18rpx;
  border-radius: 16rpx;
  transition: background-color 0.3s ease;
}

.summary-item:active {
  background-color: rgba(76, 175, 80, 0.1);
}

.summary-value {
  font-size: 64rpx;
  font-weight: 600;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.plant-status-detail {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.status-card {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.status-card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.status-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.status-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.status-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.status-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.status-count {
  font-size: 32rpx;
  color: #666;
  font-weight: 600;
}

.status-percent {
  font-size: 32rpx;
  font-weight: 600;
}

.status-count-text {
  font-size: 20rpx;
  color: #999;
}

.status-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease-in-out;
}

.progress-text {
  width: 80rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* GitHub风格日历热力图 - 完全重构布局 */
.heatmap-legend {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 20rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.legend-box {
  width: 36rpx;
  height: 36rpx;
  border-radius: 4rpx;
  background-color: #ebedf0;
}

.legend-box.level-1 {
  background-color: #9be9a8;
}

.legend-box.level-2 {
  background-color: #40c463;
}

.legend-box.level-3 {
  background-color: #30a14e;
}

.legend-box.level-4 {
  background-color: #216e39;
}

.calendar-heatmap {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  overflow-x: auto;
  padding: 8rpx 0;
}

.weekday-labels {
  display: flex;
  flex-direction: row;
  gap: 10rpx;
  margin-bottom: 10rpx;
  justify-content: center;
  flex-shrink: 0;
}

.weekday-label {
  width: 74rpx;
  height: 30rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 30rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.calendar-grid {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  flex: 1;
  min-width: calc(7 * 74rpx + 6 * 10rpx);
  align-items: center;
}

.calendar-row {
  display: flex;
  justify-content: center;
  gap: 10rpx;
}

.calendar-cell {
  width: 74rpx;
  height: 74rpx;
  border-radius: 8rpx;
  background-color: transparent;
  position: relative;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cell-date {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
}

.calendar-cell.level-0 {
  background-color: #ebedf0;
}

.calendar-cell.level-1 {
  background-color: #9be9a8;
}

.calendar-cell.level-2 {
  background-color: #40c463;
}

.calendar-cell.level-3 {
  background-color: #30a14e;
}

.calendar-cell.level-4 {
  background-color: #216e39;
}

.calendar-cell.active {
  outline: 2rpx solid #000;
  outline-offset: 1rpx;
}

.cell-tooltip {
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  white-space: nowrap;
  z-index: 10;
  margin-bottom: 4rpx;
}

.cell-tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 4rpx solid transparent;
  border-top-color: rgba(0, 0, 0, 0.8);
}

.heatmap-summary {
  margin-top: 20rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.summary-count {
  color: #4CAF50;
  font-weight: 600;
}
