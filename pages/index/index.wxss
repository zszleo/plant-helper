/* pages/index/index.wxss */

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  height: 120rpx;
  box-sizing: border-box;
}

.container {
  position: absolute;
  top: 120rpx;
  bottom: 120rpx;
  left: 0;
  right: 0;
  background: #f5f5f5;
  height: calc(100vh - 240rpx);
  border: none;
}

/* 隐藏 scroll-view 的默认边框 */
.container::-webkit-scrollbar {
  width: 0;
  height: 0;
}

/* 页面滑动动画 */
.page-slide-left {
  animation: slideLeft 0.5s ease-in-out forwards;
}

.page-slide-right {
  animation: slideRight 0.5s ease-in-out forwards;
}

@keyframes slideLeft {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(-100%);
    opacity: 0;
  }
}

@keyframes slideRight {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(100%);
    opacity: 0;
  }
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  margin-right: 12rpx;
  position: relative;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  margin-right: 12rpx;
  min-width: 80rpx;
}

.search-btn-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.clear-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  background: #cccccc;
  border-radius: 50%;
  margin-left: 12rpx;
}

.clear-icon {
  width: 16rpx;
  height: 16rpx;
}

.sync-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 16rpx;
}

.sync-icon {
  width: 36rpx;
  height: 36rpx;
}

.sync-text {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 植物列表 */
.plant-list {
  padding: 20rpx 30rpx;
  background: #f5f5f5;
  border-radius: 16rpx 16rpx 0 0;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: calc(100vh - 240rpx);
}

.plant-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.plant-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.plant-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background: #f5f5f5;
}

.plant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.plant-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.plant-type {
  font-size: 22rpx;
  color: #999;
}

.plant-meta {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.meta-separator {
  font-size: 22rpx;
  color: #ccc;
  margin: 0 12rpx;
}

.plant-status {
  display: flex;
  align-items: center;
}

.status-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  display: inline-block;
  vertical-align: top;
}

.status-text {
  font-size: 22rpx;
  color: #999;
}

.plant-description {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.plant-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.record-count {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.load-more-text {
  font-size: 24rpx;
  color: #999;
}

/* 测试按钮 */
.test-btn {
  position: fixed;
  right: 30rpx;
  bottom: 320rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #FF9800, #FF5722);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.4);
  z-index: 100;
}

.test-icon {
  font-size: 48rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
  z-index: 100;
}

.add-icon {
  width: 48rpx;
  height: 48rpx;
}
