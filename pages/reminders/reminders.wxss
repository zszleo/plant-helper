/* pages/reminders/reminders.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 页面滑动动画 */
.page-slide-left {
  animation: slideLeft 0.5s ease-in-out forwards;
}

.page-slide-right {
  animation: slideRight 0.5s ease-in-out forwards;
}

@keyframes slideLeft {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(-100%);
    opacity: 0;
  }
}

@keyframes slideRight {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(100%);
    opacity: 0;
  }
}

/* 统计栏 */
.stats-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 60rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-value.active {
  color: #4CAF50;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #f0f0f0;
}

/* 提醒列表 */
.reminders-list {
  padding: 20rpx 30rpx;
}

.reminder-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.reminder-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.reminder-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.reminder-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.reminder-icon {
  width: 32rpx;
  height: 32rpx;
}

.reminder-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.reminder-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.reminder-plant {
  font-size: 24rpx;
  color: #999;
}

.reminder-switch {
  transform: scale(0.9);
}

.reminder-details {
  display: flex;
  padding: 16rpx 0;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.detail-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #666;
}

.reminder-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  margin-left: 16rpx;
}

.action-btn.delete {
  background: #ffebee;
}

.action-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
  z-index: 100;
}

.add-icon {
  width: 48rpx;
  height: 48rpx;
}
